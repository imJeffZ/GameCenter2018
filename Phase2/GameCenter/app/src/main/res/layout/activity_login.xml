<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgm3"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/userNametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="113sp"
        android:ems="10"
        android:hint="userName"
        android:layout_centerHorizontal="true"
        android:inputType="none"
        tools:layout_editor_absoluteX="68sp"
        tools:layout_editor_absoluteY="110sp" />

    <EditText
        android:id="@+id/passwordtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/userNametext"
        android:layout_marginTop="100sp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="68sp"
        tools:layout_editor_absoluteY="184sp" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="120sp"
        android:layout_height="50sp"
        android:layout_alignTop="@+id/passwordtext"
        android:layout_marginTop="120sp"
        android:text="Log in"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style3"
        tools:layout_editor_absoluteX="38sp"
        tools:layout_editor_absoluteY="275sp" />

    <Button
        android:id="@+id/registerbtn"
        android:layout_width="120sp"
        android:layout_height="50sp"
        android:layout_alignTop="@+id/loginBtn"
        android:layout_marginTop="80sp"
        android:layout_centerHorizontal="true"
        android:text="Sign up here"
        android:background="@drawable/button_style3"/>

</RelativeLayout>

