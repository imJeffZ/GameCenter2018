    <TextView
        android:id="@+id/Hiuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="-50dp"
        android:layout_toLeftOf="@+id/logOutBtn"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Welcome to Matching Card!"
        android:textColor="#caf0a708"
        android:gravity="center"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

    <TextView
        android:id="@+id/GameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="295dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="A Memory Game where you must match each pair of cards."
        android:textSize="18dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/StartButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/GameText"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style"
        android:text="Load From AutoSave" />

    <Button
        android:id="@+id/LoadButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/GameText"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="17dp"
        android:layout_toStartOf="@+id/StartButton"
        android:background="@drawable/button_style"
        android:text="Load  Game" />

    <Button
        android:id="@+id/SaveButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/GameText"
        android:layout_marginStart="17dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/StartButton"
        android:background="@drawable/button_style"
        android:text="Save Game" />

